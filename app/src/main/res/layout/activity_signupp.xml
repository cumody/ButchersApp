<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/signupbk"
    tools:context=".ui.LoginActivity">


        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="152dp"
            android:fontFamily="@font/gilroy_extrabold"
            android:text="Create an account"
            android:textColor="#FFFFFF"
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <EditText
            android:id="@+id/username_signup"
            android:layout_width="278dp"
            android:layout_height="43dp"
            android:layout_marginTop="28dp"
            android:alpha="0.27"
            android:background="@drawable/login_activity_btn_style"
            android:hint="Username"
            android:padding="5dp"
            android:inputType="textPersonName"
            android:textColorHint="#F30303"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <EditText
            android:id="@+id/email_signup"
            android:layout_width="278dp"
            android:layout_height="43dp"
            android:layout_marginTop="12dp"
            android:alpha="0.27"
            android:background="@drawable/login_activity_btn_style"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="5dp"
            android:textColorHint="#F30303"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/username_signup" />

        <EditText
            android:id="@+id/password_signup"
            android:layout_width="278dp"
            android:layout_height="43dp"
            android:layout_marginTop="12dp"
            android:alpha="0.27"
            android:background="@drawable/login_activity_btn_style"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="5dp"
            android:textColorHint="#F30303"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/email_signup" />

        <EditText

            android:id="@+id/confirm_password_signup"
            android:layout_width="278dp"
            android:layout_height="43dp"
            android:layout_marginTop="12dp"
            android:alpha="0.27"
            android:background="@drawable/login_activity_btn_style"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:padding="5dp"
            android:textColorHint="#F30303"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/password_signup" />

        <Button
            android:id="@+id/signup_btn"
            android:layout_width="268dp"
            android:layout_height="51dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/defult_state"
            android:fontFamily="@font/lato_medium"

            android:text="Sign up"
            android:textColor="#FFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/confirm_password_signup" />


        <TextView
            android:layout_width="319dp"
            android:layout_height="38dp"
            android:layout_marginTop="80dp"
            android:fontFamily="@font/lato_light"
            android:textSize="12sp"
            android:text="By clicking Sign up you agree the following
Terms
and Conditions without reservation"
            android:textAlignment="center"
            android:textColor="#FFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signup_btn" />

    </androidx.constraintlayout.widget.ConstraintLayout>
